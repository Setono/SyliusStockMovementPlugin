<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_stock_movement.currency_converter.composite" class="Setono\SyliusStockMovementPlugin\CurrencyConverter\CompositeCurrencyConverter"/>

        <service id="setono_sylius_stock_movement.currency_converter.product_variant" class="Setono\SyliusStockMovementPlugin\CurrencyConverter\ProductVariantCurrencyConverter">
            <argument type="service" id="sylius.repository.channel" />
            <tag name="setono_sylius_stock_movement.currency_converter"/>
        </service>

        <service id="setono_sylius_stock_movement.currency_converter.static_exchange_rate" class="Setono\SyliusStockMovementPlugin\CurrencyConverter\StaticExchangeRateCurrencyConverter">
            <argument type="service" id="sylius.currency_converter" />
            <tag name="setono_sylius_stock_movement.currency_converter"/>
        </service>
    </services>
</container>
