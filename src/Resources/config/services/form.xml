<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="setono.sylius_stock.form.type.stock_movement_report_configuration.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>
        <parameter key="setono.sylius_stock.form.type.stock_movement.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>
    </parameters>
    <services>
        <service id="setono.sylius_stock.form.type.stock_movement_report_configuration" class="Setono\SyliusStockPlugin\Form\Type\StockMovementReportConfigurationType">
            <argument>%setono_sylius_stock.model.stock_movement_report_configuration.class%</argument>
            <argument>%setono.sylius_stock.template_labels%</argument>
            <argument>%setono.sylius_stock.data_source_labels%</argument>
            <argument>%setono.sylius_stock.form.type.stock_movement_report_configuration.validation_groups%</argument>
            <tag name="form.type" />
        </service>

        <service id="setono.sylius_stock.form.type.stock_movement" class="Setono\SyliusStockPlugin\Form\Type\StockMovementType">
            <argument>%setono_sylius_stock.model.stock_movement.class%</argument>
            <argument type="service" id="sylius.repository.product_variant"/>
            <argument type="service" id="setono.sylius_stock.form.event_listener.convert_price"/>
            <argument>%setono.sylius_stock.form.type.stock_movement.validation_groups%</argument>
            <tag name="form.type" />
        </service>

        <service id="setono.sylius_stock.form.event_listener.convert_price" class="Setono\SyliusStockPlugin\Form\EventListener\ConvertPriceListener">
            <argument type="service" id="setono.sylius_stock.currency_converter.default"/>
            <argument>%setono.sylius_stock.base_currency%</argument>
        </service>
    </services>
</container>
