<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Setono\SyliusStockPlugin\Model\ReportConfiguration" table="setono_report_configuration">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" length="191" nullable="false" />
        <field name="schedule" type="cron_expression" nullable="false" />

        <one-to-many field="deliveryMethods" target-entity="Setono\SyliusStockPlugin\Model\ReportConfigurationDeliveryMethodInterface" mapped-by="reportConfiguration" orphan-removal="true">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>
    </mapped-superclass>

</doctrine-mapping>