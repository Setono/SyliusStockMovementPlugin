<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Setono\SyliusStockPlugin\Model\ReportConfiguration" table="setono_sylius_stock__report_configuration">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" />
        <field name="type" type="string" />
        <field name="schedule" type="cron_expression" />
        <field name="template" type="string" />
        <field name="ftpHost" type="string" nullable="true" />
        <field name="ftpUsername" type="string" nullable="true" />
        <field name="ftpPassword" type="string" nullable="true" />
        <field name="ftpPort" type="integer" nullable="true" />
        <field name="ftpPath" type="string" nullable="true" />
        <field name="emailTo" type="json_array" nullable="true" />
        <field name="emailSubject" type="string" nullable="true" />
        <field name="emailBody" type="text" nullable="true" />

    </mapped-superclass>

</doctrine-mapping>
