<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Setono\SyliusStockPlugin\Model\ReportConfigurationDeliveryMethod" table="setono_report_configuration_delivery_method">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="type" type="string" />
        <field name="configuration" type="array" />

        <many-to-one field="reportConfiguration" target-entity="Setono\SyliusStockPlugin\Model\ReportConfigurationInterface" inversed-by="deliveryMethods">
            <join-column name="report_configuration_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>